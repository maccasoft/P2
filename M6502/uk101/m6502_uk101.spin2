        if_z    getbyte t1, acia_rxr, #0
        if_z    mov     acia_rxr, #0
                ret

acia_write
                getbyte t5, t2, #0
                cmp     t5, #$00            wz
        if_z    jmp     #\acia_ctl_wr
                cmp     t5, #$01            wz
        if_z    getbyte t5, t1, #0              ' get byte to shift out
        if_z    or      t5, #%1_00000000        ' insert stop bit
        if_z    shl     t5, #1                  ' insert start bit
        if_z    mov     acia_txr, t5            ' set shift register
                ret

acia_ctl_rd
                mov     t1, #$00
                testb   acia_rxr, #8        wz
                bitz    t1, #0
                testb   acia_txr, #8        wz
                bitnz   t1, #1
                ret

acia_ctl_wr
                ' Ignore ctl write
                ret

