                byte    (0 << 5) | %00100  '1B    x
                byte    (5 << 5) | %10000  '1C    y
                byte    (0 << 5) | %00010  '1D    z
                byte    (3 << 5) | %00001  '1E    1
                byte    (3 << 5) | %00010  '1F    2
                byte    (3 << 5) | %00100  '20    3
                byte    (3 << 5) | %01000  '21    4
                byte    (3 << 5) | %10000  '22    5
                byte    (4 << 5) | %10000  '23    6
                byte    (4 << 5) | %01000  '24    7
                byte    (4 << 5) | %00100  '25    8
