sys_reset
                cogstop #0                  ' stop Z80

                mov     pa, ##48*1024/4
                mov     ptra, ##@z80_4000   ' initialize memory
.l1             wrlong  #0, ptra++          '   0 if user reset
                djnz    pa, #.l1

                coginit #0, ##@zk_cogbase   ' start Z80 on cog #0
                ret     wcz

