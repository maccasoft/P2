                xor     zk_tmp0, #$FF
                encod   zk_tmp0, zk_tmp0
                add     zk_tmp0, #@zx_keys
                rdbyte  zk_tmp8, zk_tmp0
                testp   #ZX_EAR         wc  ' ear
                bitc    zk_tmp8, #6         ' |
